% -*- mode: erlang -*-

% Minimum requirement so that release handling works, and MsgPack.
{require_min_otp_vsn, "R15B01"}.

% Options to pass into compiler during compile-time.
{erl_opts, [
     debug_info ,      % Compile with Debug information for now.
     fail_on_warrning  % We don't even want to have warnings.
    ]}.

{sub_dirs, ["rel"]}.


{deps, [ 
    {erlp2p,".*",
       {git, "git://github.com/dstar4138/erlang-p2p.git", {branch,"master"}}},
    {msgpack,".*", 
       {git, "git://github.com/msgpack/msgpack-erlang.git", {branch, "master"}}}
]}.
